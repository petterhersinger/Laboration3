@model IEnumerable<Laboration3.Models.PlayerModel>

@{
    ViewData["Title"] = "SelectWithDataSet";
}

<h1>SelectWithDataSet</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsStarting)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeamId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Position)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsStarting)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TeamId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new {player_id = item.Id}) |
                    @Html.ActionLink("Details", "Details", new {player_id = item.Id}) |
                    @Html.ActionLink("Delete", "Delete", new {player_id = item.Id})
                </td>
            </tr>
        }
    </tbody>
</table>

@if (ViewBag.amount != "")
{
    <p>Amount: @ViewBag.amount</p>
}
@if (ViewBag.error != "")
{
    <p>Error: @ViewBag.error</p>
}