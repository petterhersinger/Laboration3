@model Laboration3.Models.PlayerTeamViewModel

@{
    int i = 0;
    //if (ViewData["Team"] != null) { string teamValue = ViewData["Team"].ToString(); }
    string s = ViewBag.message;

}
<h2>Filtering</h2>
<div class="row">
    <div class="form-group col-md-4">
        <form asp-action="Filtering" method="post">
            <div class="form-group">
                <select class="form-control" id="Team" name="Team">
                    @foreach (Laboration3.Models.TeamModel TeamModel in Model.TeamModelList)
                    {
                        @if (TeamModel.Id != i)
                            {
                            <option value="@TeamModel.Id">@TeamModel.Name</option>
                            }
                            else
                            {
                            <option value="@TeamModel.Id" Selected>@TeamModel.Name</option>
                            }
                        }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Filter" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>

<p>Team ID: @s</p>

<p><b>Players and teams from ViewModel</b></p>
<table class="table">
    <tr>
        <th>Name</th>
        <th>Team</th>
    </tr>
    @foreach (Laboration3.Models.PlayerTeamModel PlayerTeamModel in Model.PlayerTeamModelList)
    {
        <tr>
            <td>@PlayerTeamModel.Name</td>
            <td>@PlayerTeamModel.Team</td>
        </tr>
    }

</table>

<p><b>Team List - ViewData</b></p>
@{
    List<TeamModel> TeamModelList2 = (List<TeamModel>)ViewData["teamlist"];
}

<table class="table">
    <tr>
        <th>Id</th>
        <th>Team</th>
    </tr>
    @foreach (Laboration3.Models.TeamModel TeamModel in TeamModelList2)
    {
        <tr>
            <td>@TeamModel.Id</td>
            <td>@TeamModel.Name</td>
        </tr>
    }
</table>

<p><b>Team List - ViewBag</b></p>

<table class="table">
    <tr>
        <th>Id</th>
        <th>Team</th>
    </tr>
    @foreach (Laboration3.Models.TeamModel TeamModel in (List<TeamModel>)ViewBag.Teamlist)
    {
        <tr>
            <td>@TeamModel.Id</td>
            <td>@TeamModel.Name</td>
        </tr>
    }
</table>
