@model Laboration3.Models.PlayerModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Player</h1>

<form asp-action="Edit" asp-route-person_id="@Model.Id">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name" class="control-label">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Position" class="control-label">Position</label>
        <input asp-for="Position" class="form-control" />
        <span asp-validation-for="Position" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IsStarting" class="control-label">IsStarting</label>
        <input asp-for="IsStarting" class="form-control" />
        <span asp-validation-for="IsStarting" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TeamId" class="control-label">TeamId</label>
        <input asp-for="TeamId" class="form-control" />
        <span asp-validation-for="TeamId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-action="SelectWithDataSet">Back to List</a>
    </div>
</form>
